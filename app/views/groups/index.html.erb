<div class="col-md-12">

  <h2 class="text-center"> 我发表过的文章 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> Content </th>
        <th> Group Name </th>
        <th> Last Update </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td> <%= link_to(group.title,group_path(group)) %> </td>
          <td> <%= group.description %> </td>
          <td> <%= group.updated_at %> </td>
          <td> <%= link_to('Edit', edit_group_path(group), class: "btn btn-default btn-xs") %></td>
          <td> <%= link_to('Delete', group_path(group), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
